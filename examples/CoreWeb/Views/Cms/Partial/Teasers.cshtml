@model IList<CoreWeb.Models.Regions.Teaser>
@inject Piranha.IApi Api
@{
    var teasers = Model.Count;
    var teaserWidth = 12 / teasers;
}

@if (teasers > 0) {
    <div class="teasers">
        <div class="container">
            <div class="row">
                @foreach (var teaser in Model) {
                    <div class="col-sm-@teaserWidth">
                        <h3>@teaser.Title.Value</h3>
                        @if (teaser.Image.HasValue) {
                            <img src="@Url.Content(WebApp.Media.ResizeImage(teaser.Image, 256))">
                        }
                        @Html.Raw(teaser.Body)
                    </div>
                }
            </div>
        </div>
    </div>
}
